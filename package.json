{
  "author": "Gary Johnson",
  "description": "This is a project used as a portfolio",
  "name": "api_backend_template",
  "version": "1.0.0",
  "main": "./src/v1/bin/server.js",
  "scripts": {
    "start": "npm run clean && docker-compose up",
    "stop": "docker-compose down --remove-orphans --rmi all",
    "build": "npx tsc -p .",
    "docker-launch": "npx pm2-docker start ./dist/bin/server.js -i 0",
    "clean": "npm run clean:pm2 && npm run stop",
    "clean:pm2": " npx pm2 kill",
    "lint": "npx eslint .",
    "test": "npm run lint && npm run test:v1",
    "test:v1": "npm run clean && npx c8 mocha -r ts-node/register --timeout 400000 './tests/app/**/*.test.ts' './tests/v1/**/*.test.ts'",
    "test:v1:functional": "npm run clean && npx c8 mocha -r ts-node/register --timeout 400000 './tests/v1/functional/**/*.test.ts'",
    "test:v1:unit": "npx c8 mocha -r ts-node/register --timeout 500000 './tests/v1/unit/**/*.test.ts'"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^7.1.0",
    "ip": "^1.1.5",
    "mysql2": "^3.12.0",
    "pm2": "^5.3.1",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.3.20",
    "typescript": "^4.4.4",
    "uuid": "^8.3.2",
    "winston": "^3.10.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/cors": "^2.8.12",
    "@types/crypto-js": "^4.1.1",
    "@types/express": "^4.17.13",
    "@types/ip": "^1.1.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.18.96",
    "@types/node-fetch": "^2.6.12",
    "@types/sinon": "^10.0.13",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "c8": "^9.1.0",
    "chai": "^4.3.6",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.14",
    "sinon": "^14.0.0",
    "supertest": "^6.2.3",
    "testcontainers": "^10.16.0",
    "ts-node": "^10.7.0"
  },
  "license": "ISC"
}
