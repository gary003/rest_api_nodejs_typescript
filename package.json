{
  "author": "Gary Johnson",
  "description": "This is a portfolio project use to show skills",
  "name": "rest_api_nodejs_typescript",
  "version": "1.0.0",
  "main": "./src/v1/bin/server.ts",
  "scripts": {
    "start": "npm run clean && docker compose up --build",
    "stop": "docker compose down --remove-orphans",
    "build:app": "npx tsc -p .",
    "launch:config": "bash ./scripts/config.sh",
    "minify": "bash ./scripts/minify_p.sh",
    "docker:build:image": "docker build -t gary003/rest_api_nodejs_typescript .",
    "docker:launch:app": "npx pm2-docker start ./dist/bin/server.js",
    "clean": "npm run stop && npm run clean:pm2 && npm run clean:volumes && npm run clean:image",
    "clean:pm2": " npx pm2 kill",
    "clean:volumes": "docker volume rm $(docker volume ls -q) 2>/dev/null || true",
    "clean:image": " docker image rm $(echo $(docker image ls | grep none | awk '{print $3}'))  2>/dev/null || true",
    "lint": "npx eslint .",
    "test": "npm run lint && npx c8 mocha -r ts-node/register --timeout 800000 './tests/integration/**/*.test.ts' './tests/unit/v1/**/*.test.ts'",
    "test:dev": "npm run lint && npm run clean && npx c8 mocha -r ts-node/register --timeout 800000 './tests/integration/**/*.test.ts' './tests/unit/v1/**/*.test.ts'",
    "test:integration": "npm run clean && npx c8 mocha -r ts-node/register --timeout 500000 './tests/integration/**/*.test.ts'",
    "test:performance": "npx mocha -r ts-node/register --timeout 500000 './tests/performance/**/*.test.ts'",
    "test:unit:v1": "npx c8 mocha -r ts-node/register --timeout 500000 './tests/unit/v1/**/*.test.ts'"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.62.0",
    "@opentelemetry/sdk-node": "^0.203.0",
    "@opentelemetry/semantic-conventions": "^1.36.0",
    "@opentelemetry/winston-transport": "^0.14.1",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.1.0",
    "ip": "^1.1.5",
    "mysql2": "^3.12.0",
    "pm2": "^5.3.1",
    "ts-node": "^10.7.0",
    "typeorm": "^0.3.20",
    "typescript": "^4.4.4",
    "uuid": "^8.3.2",
    "winston": "^3.10.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/chai": "^4.3.1",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.12",
    "@types/crypto-js": "^4.1.1",
    "@types/express": "^4.17.13",
    "@types/ip": "^1.1.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.18.96",
    "@types/node-fetch": "^2.6.12",
    "@types/sinon": "^10.0.13",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "c8": "10.1.3",
    "chai": "^4.3.6",
    "eslint": "^9.20.1",
    "mocha": "^10.0.0",
    "openapi3-ts": "^4.4.0",
    "prettier": "^3.5.1",
    "sinon": "^14.0.0",
    "supertest": "^6.2.3",
    "swagger-ui-express": "^5.0.1",
    "testcontainers": "^10.16.0",
    "typescript-eslint": "^8.24.1"
  },
  "license": "MIT"
}
